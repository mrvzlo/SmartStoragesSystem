@model SmartKitchen.Domain.CreationModels.NameCreationModel
<div class="row justify-content-center my-3 mx-0">
    <div class="col-lg-6">
        @using (Html.BeginForm("Create", "Category", FormMethod.Post, new { @class = "row  justify-content-center mt-md-3" }))
        {
            @Html.TextBoxFor(x => x.Name, new { @class = "col-8", placeholder = "New category" })
            <input type="submit" value="Add" class="btn btn-main col-4" />
            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "col-12 error" })
        }
    </div>
</div>
