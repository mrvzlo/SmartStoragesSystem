@model SmartKitchen.Domain.CreationModels.BasketProductCreationModel
<div class="row justify-content-center my-3 mx-0">
    <div class="col-12">
        @using (Html.BeginForm("CreateProduct", "Basket", FormMethod.Post, new { @class = "row justify-content-center" }))
        {
            @Html.HiddenFor(x => x.Basket)
            @Html.TextBoxFor(x => x.Product, new { @class = "col-5", placeholder = "New product", list = "products" })
            <datalist id="products"></datalist>
            @Html.DropDownListFor(x=>x.Storage, new SelectList(ViewBag.SelectList, "Value", "Text"), new {@class = "input col-sm-5 col-4" })
            <input type="submit" value="Add" class="btn btn-main col-sm-2 col-3" />
            @Html.ValidationMessageFor(x=>x.Product, "", new { @class = "col-12 error" })
        }
    </div>
</div>
