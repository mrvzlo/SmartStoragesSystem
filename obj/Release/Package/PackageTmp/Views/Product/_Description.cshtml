@using SmartKitchen.Enums
@model SmartKitchen.Models.ProductDescription
<tr id="@Model.Cell.Id">
    <td class="font-weight-bold">@Model.Product.Name</td>
    <td>@Model.Category.Name</td>
    <td @if (Model.Cell.Amount != Amount.None) {<text>onclick = "showDatePicker(@Model.Cell.Id)"</text>}>
        <div class="safety-@Model.Notification.Type">@Model.Notification.SafetyInfo</div>
    </td>
    <td class="text-nowrap">
        <button onclick="changeProductAmount('@Model.Cell.Id',-1);" class="d-inline btn p-0 fa fa-minus-circle"></button>
        &nbsp;@Model.Notification.AmountInfo&nbsp;
        <button onclick="changeProductAmount('@Model.Cell.Id',1);" class="d-inline btn p-0 fa fa-plus-circle"></button>
    </td>
<td>
    <button onclick="removeProduct(@Model.Cell.Id,'@Model.Product.Name');" class="d-inline btn p-0 fa fa-times-circle"></button>
</td>
</tr>