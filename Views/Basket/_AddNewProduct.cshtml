@model int
<div class="row justify-content-center my-3 mx-0">
    <div class="col-lg-6">
        @using (Html.BeginForm("CreateProduct", "Basket", FormMethod.Post, new { @class = "row  justify-content-center mt-md-3" }))
        {
            @Html.Hidden("Basket",Model)
            @Html.TextBox("Name", "", new { @class = "col-8", placeholder = "New basket product" })
            <input type="submit" value="Add" class="btn btn-main col-4" />
            @Html.ValidationMessage("Name", "", new { @class = "col-12 error" })
        }
    </div>
</div>
