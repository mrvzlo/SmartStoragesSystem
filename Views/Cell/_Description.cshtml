@using SmartKitchen.Enums
@model SmartKitchen.Models.CellDescription
@{bool ChangeableDate = Model.Cell.Amount != Amount.None;}

<tr id="@Model.Cell.Id">
    <td class="font-weight-bold" id="name_@Model.Cell.Id">@Model.Product.Name</td>
    <td>@Model.Category.Name</td>

    <td @if (ChangeableDate) { 
            @: onclick="showDatePicker(@Model.Cell.Id,'@Model.Product.Name')"
        }>
        <div class="font-weight-bold text-@Model.Safety.Type" 
             @if (ChangeableDate){
                 @: data-toggle="modal" data-target="#DateModal"
             }>@Model.Safety.Info</div>
    </td>

    <td class="font-weight-bold text-@Model.Amount.Type" data-toggle="modal" data-target="#AmountModal" onclick="showAmountPicker(@Model.Cell.Id)">@Model.Amount.Info</td>
</tr>