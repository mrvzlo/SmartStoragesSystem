@using SmartKitchen.Enums
@model SmartKitchen.Models.StorageDescription
@{
	ViewBag.Title = Model.Name;
}
<div class="my-4 h4 text-center">@ViewBag.Title</div>
<div class="row justify-content-center my-4">
	<div class="col-9">
		@{ Html.RenderAction("_AddProduct", "Product", new { storage = Model.Id });}
	</div>
</div>
<div class="storage text-center" style="background-color: #@Model.Type.Background">
	@if (Model.Products.Count == 0)
	{
		<div class="alert m-0 h2">This storage is empty now</div>
	}
	else
	{
		<div class="row font-weight-bold">
			<div class="col">Name</div>
			<div class="col">Category</div>
			<div class="col">Safety</div>
			<div class="col">Status</div>
		</div>
		foreach (var product in Model.Products)
		{
		<div class="row">
			<div class="col">@product.Product.Name</div>
			<div class="col">@product.Category.Name</div>
			@{
				var status = product.Safety == Safety.IsSafe ? "success" : product.Safety == Safety.Expired ? "danger" : "warning"; 
			}
			<div class="col bg-@status">@product.Safety</div>
			<div class="col">@product.Status.Amount</div>
		</div>
		}
	}
</div>
