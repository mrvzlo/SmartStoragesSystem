@using SmartKitchen.Enums
@model SmartKitchen.Models.CellDescription
@{bool ChangeableDate = Model.Cell.Amount != Amount.None;}

<tr id="@Model.Cell.Id">
    <td id="name_@Model.Cell.Id">@Model.Product.Name</td>
    <td>@Model.Category.Name</td>

    <td @if (ChangeableDate) { 
            @: onclick="showDatePicker(@Model.Cell.Id,'@Model.Product.Name')"
        }>
        <a class="font-weight-bold text-@Model.Safety.Type" 
             @if (ChangeableDate){
                 @: data-toggle="modal" data-target="#DateModal"
             }>@Model.Safety.Info</a>
    </td>

    <td onclick="showAmountPicker(@Model.Cell.Id)">
        <a class="font-weight-bold text-decoration-none text-@Model.Amount.Type" data-toggle="modal" data-target="#AmountModal">@Model.Amount.Info</a>
    </td>
</tr>