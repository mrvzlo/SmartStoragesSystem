@model List<SmartKitchen.Models.StorageDescription>

<div class="row">
	@foreach (var item in Model)
	{
		<div class="storage col-12 col-md-6">
			<div class="material-icons icon">@item.Icon</div>
			<div>
				@Html.DisplayFor(modelItem => item.Name)
			</div>
			<div>
				@Html.ActionLink("Edit", "Edit", "Storage", new { id = item.Id })
				@Html.ActionLink("Delete", "Delete", "Storage", new { id = item.Id })
			</div>
		</div>
	}
	<button class="text-left btn btn-main col-12 col-md-6 storage" onclick="window.location = '@Url.Action("Create","Storage")';">
		<div class="ion-md-add-circle"> Add new storage</div>
	</button>
</div>
